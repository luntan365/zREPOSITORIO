<Ex17>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: 1,1,.5
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: '[size=40px]Progress Bar (at .25) + Slider (at .5)[/size]'
        color: .5, 0, .5, 1
        markup: True
    ProgressBar:
        value: .25
        min: 0
        max: 1
        pos_hint: {'x':.1}
        size_hint_x: .8
    Slider:
        min: 0
        max: 1
        value: .50
        pos_hint: {'x':.1}
        size_hint_x: .8
