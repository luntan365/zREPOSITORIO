<Tela>:    
    ListaAtiva:
        size_hint: 1, .8
        pos_hint: {"x":0, "y":0}
    TextInput:
        id: caixa_texto
        font_size: 33
        font_name: "consola"
        write_tab: False
        multiline: False
        size_hint: .8, .1
        pos_hint: {"x":0, "y":.8}
        padding: 10
    Button:
        text: 'X'
        font_size: 33
        size_hint: .2, .1
        pos_hint: {"x":.8, "y":.8}
        on_release: root.cacnelar_pesquisa()
    Button:
        text: 'Pendentes'
        font_size: 20
        size_hint: .4, .1
        pos_hint: {"x":0, "y":.9}
        on_release: root.listar_pendentes()
    Button:
        text: 'Pagantes'
        font_size: 20
        size_hint: .4, .1
        pos_hint: {"x":.4, "y":.9}
        on_release: root.listar_pagantes()
    Button:
        text: '+'
        font_size: 50
        size_hint: .2, .1
        pos_hint: {"x":.8, "y":.9}
        on_release: root.add_pessoa()
