<Tela>:    
    Button:
        text: 'Pendente'
        font_size: 20
        size_hint: .3, .1
        pos_hint: {"x":0, "y":.9}
        on_release: root.pendentes()
    Button:
        text: 'Pagou'
        font_size: 20
        size_hint: .2, .1
        pos_hint: {"x":.3, "y":.9}
        on_release: root.pagou()
    Button:
        text: 'Resete'
        font_size: 20
        size_hint: .2, .1
        pos_hint: {"x":.5, "y":.9}
        on_release: root.resetar()
    Button:
        text: '+'
        font_size: 50
        size_hint: .2, .1
        pos_hint: {"x":.7, "y":.9}
        on_release: root.add_pessoa()
    Button:
        text: 'X'
        font_size: 33
        size_hint: .1, .1
        pos_hint: {"x":.9, "y":.9}
        on_release: root.remover_pessoa()
