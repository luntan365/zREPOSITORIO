#:kivy 1.1.0

Root:
    BoxLayout:
        Button:
            text: 'Save'
            on_release: root.show_save()


<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        TextInput:
            id: text_input
            text: 'planilha'
            size_hint_y: .1
            multiline: False

        BoxLayout:
            size_hint_y: .1

            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)

        FileChooserIconView:
            id: filechooser
            path: '/sdcard/Download'
            show_hidden: False
            on_selection: text_input.text = self.selection and self.selection[0] or ''
